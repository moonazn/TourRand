<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/homeback1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="60sp"
            android:src="@drawable/icon"
            android:layout_marginTop="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/circle1"
            android:layout_width="145sp"
            android:layout_height="145sp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/circle_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon" />

        <ImageView
            android:id="@+id/circle2"
            android:layout_width="185sp"
            android:layout_height="185sp"
            android:layout_marginTop="36dp"
            android:layout_marginRight="28dp"
            android:src="@drawable/circle_white"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon" />

        <ImageView
            android:id="@+id/circle3"
            android:layout_width="160sp"
            android:layout_height="160sp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="408dp"
            android:src="@drawable/circle_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon" />

        <ImageView
            android:id="@+id/circle4"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginLeft="228dp"
            android:layout_marginTop="340dp"
            android:src="@drawable/circle_gray1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon" />

        <ImageView
            android:id="@+id/circle0"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@drawable/circle_red"
            app:layout_constraintTop_toBottomOf="@id/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="45dp"
            android:text="여행 기록 보러가기  ↓"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="20dp"
            android:text="아래로 스크롤"
            android:textColor="#585858"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="TextSizeCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>